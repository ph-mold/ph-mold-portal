{
  "name": "ph-mold-portal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:next dev:electron",
    "dev:next": "next dev -p 5123",
    "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
    "build": "npm run transpile:electron && npm run build:next",
    "build:next": "next build && rm -rf dist-react && mv out dist-react",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "lint": "eslint .",
    "dist:mac": "npm run build && electron-builder --mac --arm64",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:linux": "npm run build && electron-builder --linux --x64"
  },
  "dependencies": {
    "next": "^15.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@ph-mold/ph-ui": "^1.0.9",
    "@tailwindcss/postcss": "^4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "cross-env": "^7.0.3",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.4",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1"
  }
}
